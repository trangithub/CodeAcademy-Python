# Calculate and return the factorial of a number
def factorial(x):
    total = 1
    while x>0:
        total *= x
        x-=1
    return total
    
# Check if a number is prime
def is_prime(x):
    if x < 2:
        return False
    else:
        for n in range(2, x-1):
            if x % n == 0:
                return False
        return True
