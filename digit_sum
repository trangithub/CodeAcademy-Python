# Calculate and return the factorial of a number
def factorial(x):
    total = 1
    while x>0:
        total *= x
        x-=1
    return total
    
# Check if a number is prime
def is_prime(x):
    if x < 2:
        return False
    else:
        for n in range(2, x-1):
            if x % n == 0:
                return False
        return True

# REVERSE A STRING
def reverse(text):
    word = ""
    l = len(text) -1
    while l >= 0:
        word = word + text[l]
        l -= 1
    return word
print reverse("hello")

# VOWELS
def anti_vowel(text):
    t=""
    for c in text:
        for i in "ieaouIEAOU":
            if c==i:
                c=""
            else:
                c=c
        t=t+c
    return t
